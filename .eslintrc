{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "new-cap": 2,
        "no-use-before-define": 1,
        "quotes": [2, "single"], // одинарные ковычки внутри js
        "jsx-quotes": [2, "prefer-double"], // двойные ковычки внутри jsx
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "newline-after-var": [2, "always"]
    }

}